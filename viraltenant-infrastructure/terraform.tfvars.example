# Multi-Tenant ViralTenant Platform Configuration
# Copy this file to terraform.tfvars and fill in your values

project_name = "viraltenant"
environment  = "production"
aws_region   = "eu-central-1"

# Platform Domain Configuration
platform_domain = "viraltenant.com"
api_domain      = "api.viraltenant.com"

# Route 53 DNS Configuration
enable_route53_dns      = true
create_hosted_zone      = true
existing_hosted_zone_id = ""

# SSL Certificate Configuration
enable_ssl_certificate = true
ssl_validation_method  = "DNS"

# Domain Routing Configuration
enable_wildcard_subdomain = true
enable_www_redirect       = true
enable_api_subdomain      = true

# Database Configuration
enable_point_in_time_recovery = true
enable_deletion_protection    = false

# Storage Configuration
enable_versioning = true
enable_encryption = true

# Auth Configuration
enable_mfa = false
password_policy = {
  minimum_length    = 8
  require_lowercase = true
  require_numbers   = true
  require_symbols   = false
  require_uppercase = true
}

# API Configuration
api_throttle_rate  = 1000
api_throttle_burst = 2000

# Monitoring
enable_cloudwatch_logs = true
log_retention_days     = 30

tags = {
  Platform    = "ViralTenant"
  Environment = "production"
  ManagedBy   = "Terraform"
  Type        = "Multi-Tenant"
}

