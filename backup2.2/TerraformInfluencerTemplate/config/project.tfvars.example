# Projekt-Konfiguration
# Kopiere diese Datei zu project.tfvars und passe die Werte an

# Allgemeine Einstellungen
project_name = "mein-influencer-projekt"
environment  = "production"
aws_region   = "eu-central-1"

# Domain-Einstellungen
domain_name            = "example.com"
website_domain         = "www.example.com"
create_route53_zone    = false  # true wenn Route53 Zone erstellt werden soll
route53_zone_id        = "Z1234567890ABC"  # Wenn Zone bereits existiert

# Kontaktformular
contact_email_recipient = "kontakt@example.com"
contact_email_sender    = "noreply@example.com"

# IVS Streaming
enable_ivs_streaming = true
ivs_channel_name     = "main-channel"
ivs_channel_type     = "STANDARD"  # STANDARD oder BASIC

# IVS Chat
enable_ivs_chat = true

# User Authentication
enable_user_auth           = true
cognito_callback_urls      = ["https://www.example.com/callback"]
cognito_logout_urls        = ["https://www.example.com/logout"]
allow_user_registration    = true

# Tags
tags = {
  Project     = "Influencer Website"
  ManagedBy   = "Terraform"
  Owner       = "Dein Name"
}
